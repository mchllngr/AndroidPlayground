<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.mchllngr.androidplayground">

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Splash"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".module.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

        <activity
            android:name=".module.blank.BlankActivity"
            android:exported="true"
            android:label="@string/blank_activity_name">
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

        <activity
            android:name=".module.savingData.SavingDataActivity"
            android:exported="true"
            android:label="@string/saving_data_activity_name">
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

        <activity
            android:name=".module.fragmentTheme.FragmentThemeActivity"
            android:exported="true"
            android:label="@string/fragment_theme_activity_name">
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

        <activity
            android:name=".module.foregroundservice.ForegroundServiceActivity"
            android:exported="true"
            android:label="@string/foreground_service_activity_name">
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

        <service android:name=".module.foregroundservice.ForegroundService"/>

        <activity
            android:name=".module.donut.DonutActivity"
            android:exported="true"
            android:label="@string/donut_activity_name">
            <meta-data
                android:name="theme"
                android:resource="@style/AppTheme.NoActionBar"/>
        </activity>

    </application>

</manifest>
